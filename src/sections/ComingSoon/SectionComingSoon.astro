---
import SvgCurveAnimation from "../../components/SvgCurveAnimation";
import BtnRound from "../../components/subcomponents/BtnRound";
---

<main>
  <section>
    <div class="title">
      <h1><span>Previta Care</span> Work in Progress</h1>
      <p>Puedes revisar nuestro portafolio en</p>
      <BtnRound client:load style={{ border: "1px solid #fff", overflow: "hidden" }}>
        <a
          href="https://newfoundlandlatam.io/"
          target="_blank"
          class="btn-round"
        >
          Newfoundland
        </a>
      </BtnRound>
    </div>
  </section>
  <SvgCurveAnimation client:load />
</main>

<style>
  main {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 100vh;
    gap: 4rem;
  }

  section {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .title {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 700px;
    gap: 1rem;
  }

  .title h1 {
    font-weight: 800;
    font-size: 63px;
    color: #fff;
    margin: 0;
    text-align: center;
    font-family: "HelveticaNeue Medium";
    line-height: 100%;
  }

  .title h1 span {
    font-weight: 800;
    font-size: 63px;
    color: #1c89fd;
    margin: 0;
    text-align: center;
    font-family: "HelveticaNeue Medium";
  }

  .title p {
    color: #fff;
    margin: 0;
    text-align: center;
    margin-top: 8px;
    font-family: "HelveticaNeue Regular";
    font-size: 20px;
    font-weight: 600;
  }

  .btn-round {
    color: #fff;
    text-align: center;
    padding: 0.5rem 0;
    font-family: "HelveticaNeue Regular";
    font-size: 20px;
  }

  .logo {
    object-fit: contain;
    width: 250px;
    user-select: none;
  }

  /* 
rgb(237, 237, 237)
rgb(191, 192, 193)
rgb(221, 221, 221)
rgb(228, 214, 231) */
</style>
